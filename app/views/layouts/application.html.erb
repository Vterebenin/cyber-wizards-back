<!DOCTYPE html>
<html>

<head>
    <title>CyberWizards </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <% if user_signed_in? %>
        <%= current_user.email %>
    <% end %>
    <p class="notice">
        <%= notice %>
    </p>
    <p class="alert">
        <%= alert %>
    </p>
    <%= link_to 'Mages', mages_path %>

    <%= yield %>
</body>

</html>
