<!DOCTYPE html>
<html>

<head>
    <title>CyberWizards </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= javascript_include_tag 'application' %>
</head>

<body>
    <% if user_signed_in? %>
        <%= current_user.email %>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>    
    <% end %>
    <p class="notice">
        <%= notice %>
    </p>
    <p class="alert">
        <%= alert %>
    </p>
    
    <%= yield %>

    <%= react_component("SearchForOponnent", { greeting: "Hello from react-rails." }) %>
    
    <%= javascript_pack_tag 'application' %>
</body>

</html>
