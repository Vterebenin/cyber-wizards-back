<p id="notice"><%= notice %></p>

<h1>Mages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mages.each do |mage| %>
      <tr>
        <td><%= mage.name %></td>
        <td><%= link_to 'Show', mage %></td>
        <td><%= link_to 'Edit', edit_mage_path(mage) %></td>
        <td><%= link_to 'Destroy', mage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mage', new_mage_path %>
